@using RelatudeFishingShop.Helpers
@using WAF.Engine.Content.RelatudeFishingShop
@using WAF.Engine.Content.Native
@inject WAF.API.Web.WAFNativeContext ctx
@{ 
    var cp = ctx.Session.GetContent<ControlPanel>();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Relatude Fishing Shop</title>
    <meta name="description" content="@ViewBag.Description" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400&display=swap" rel="stylesheet">
   @* <link href="Content/css/all.css"  rel="stylesheet">*@
    <link href="Content/scss/RelatudeFishingShop.css"  rel="stylesheet">
    <script src="scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script src="scripts/jquery.animate_from_to-1.0.min.js" type="text/javascript"></script>

    @RenderSection("Header", required: false)
</head>
<body>
    @Html.Partial("Partials/Header/_Header", cp)
    @Html.Partial("Partials/Breadcrumbs/_Breadcrumbs", SiteHelper.GetParentList(ctx.Request.GetContent<HierarchicalContent>()))
    <div class="container">
        @RenderBody()
    </div>
    @Html.Partial("Partials/Footer/_Footer", cp)
    @RenderSection("Scripts", required: false)
    <script src="Content/js/headerHelper.js"></script>
    <script src="Content/js/siteHelper.js"></script>
    <script src="Content/js/helper.js?v=03032021"></script>
</body>
</html>
