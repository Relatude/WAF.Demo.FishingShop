@using WAF.Engine.Content.RelatudeFishingShop
@using WAF.Engine.Content.Native
@inject WAF.API.Web.WAFNativeContext ctx
@model List<HierarchicalContent>

@if (Model.Count > 0)
{
    <ul class="breadcrumbs">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == (Model.Count - 1))
            {
                <li>
                    <span @Html.Raw(WAFAttribute.NameAndValue("Name", Model[i].ContentParentPath)) >@Model[i].Name</span>
                </li>
            }
            else
            {
                <li>
                    <a href="@ctx.GetUrl(Model[i])" @Html.Raw(WAFAttribute.NameAndValue("Name", Model[i].ContentParentPath))>@Model[i].Name</a>
                </li>
            }
        }
    </ul>
}